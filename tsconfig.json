{
    "compilerOptions": {
        "target": "ES6",
        "esModuleInterop": true,
        "outDir": "./build",
        "strict": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        //   "declaration": true,
        //   "declarationDir": "./build/types",
        "lib": ["es6", "dom"],
        "typeRoots": ["node_modules/@types"],
        "noEmitOnError": true,
        "noImplicitAny": true,
        "baseUrl": "./",
    },
    "include": ["src/**/*", "geojsons/*.json"],
    "exclude": ["node_modules", "**/*.test.ts", "dist", "build"]
}